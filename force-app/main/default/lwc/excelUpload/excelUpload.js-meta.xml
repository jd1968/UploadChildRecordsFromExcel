<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>48.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Excel Upload</masterLabel>
    <description>Upload an Excel file to a record and extract data to specific fields in the record</description>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="title" label="Title" type="String" default="Upload Excel File" />
            <property name="label" label="Label" type="String" default="Excel File" />
            <property name="objectType" label="Type (API Name) of Reecords to Create" type="String" default="" />
            <property name="parentFieldAPIName" label="Parent Record Field (API Name)" type="String" default="" />
            <property name="fieldNames" label="Field Names (Comma-delimited)" type="String" default="" />
            
            <supportedFormFactors>
                <supportedFormFactor type="Small" />
                <supportedFormFactor type="Large" />
            </supportedFormFactors>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>